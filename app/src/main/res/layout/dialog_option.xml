<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="280dp"
    android:background="@drawable/tab_option"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnSoundOn"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="78dp"
        android:layout_marginTop="90dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/btn_on" />

    <ImageView
        android:id="@+id/btnSoundOn2"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnSoundOn"
        android:layout_marginBottom="106dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/btn_on" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/tab_option"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="75dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btn_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/option_btn_fb" />

        <ImageView
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/option_btn_google" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:visibility="visible"
        app:srcCompat="@drawable/btn_exit_icon" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="29dp"
        android:layout_weight="1"
        android:visibility="visible"
        app:srcCompat="@drawable/btn_option_close" />
</RelativeLayout>